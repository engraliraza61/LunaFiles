@model Luna.Recruitment.VisaProcessing.Data.Models.FollowUp

@{
    ViewData["Title"] = "Delete Follow Up";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this FollowUp?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Type</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Type)</dd>
        <dt class = "col-sm-2">Date</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.FollowUpDate)</dd>
        <dt class = "col-sm-2">Comments</dt>
        <dd class = "col-sm-10"> @Html.DisplayFor(model => model.Comments)</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-controller="FollowUp" asp-route-candidateSelectionDetailId="@Model.CandidateSelectionDetailId" class="btn btn-info">Back to List</a>
    </form>
</div>
