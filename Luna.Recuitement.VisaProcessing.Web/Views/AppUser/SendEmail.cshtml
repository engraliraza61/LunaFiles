
@{
    ViewData["Title"] = "SendEmail";
}
<style>
    form {
        padding: 25px;
        margin: 25px;
        box-shadow: 0 2px 5px #f5f5f5;
        background: #f5f5f5;
    }
    row{
        padding-top:25px;
    }
</style>
<div @*style="overflow-y:auto;overflow-x:auto;height:800px;"*@>
    <h1>Send Email</h1>
    <hr />
    <form asp-action="SendEmail" method="post" enctype="multipart/form-data" asp-controller="AppUser">
        <span>Email To</span><br />
        <div class="row">
            <div class="col-md">
                <input type="text" name="EmailToAddress" class="form-control" />
            </div>
        </div><span>Email Subject</span><br />
        <div class="row">

            <div class="col-md">
                <input type="text" name="emailSubject" class="form-control" />
            </div>
        </div><span>Attach required File</span><br />
        <div class="row">

            <div class="col-md">
                <input type="file" name="File" id="listFiles" class="form-control" />
            </div>
        </div><span>Body</span><br />
        <div class="row">

            <div class="col-md">
                <textarea name="emailBody" class="form-control"></textarea>
            </div>
        </div>
        <div class="row">
            <button class="btn btn-success" type="submit">send Email</button>
        </div>
    </form>
</div>


