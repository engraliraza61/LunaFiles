@model Luna.Recruitment.VisaProcessing.Data.Models.CandidateSelection

@{
    ViewData["Title"] = "Delete Selection";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this seletion?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Selection Date</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.SelectionDate)</dd>
        <dt class="col-sm-2">Sponser</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Sponser.Name)</dd>
        <dt class="col-sm-2">Group</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.SelectionGroup)</dd>
    </dl>
    
    <form asp-action="DeleteSelection">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="CandidateSelection" asp-action="Index">Back to List</a>
    </form>
</div>

