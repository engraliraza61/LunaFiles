@model Luna.Recruitment.VisaProcessing.DTO.SMSDto

@{
    ViewData["Title"] = "SMS";
}

<div class="container">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header bg-primary text-white"><i class="fa fa-envelope"></i> Send SMS</div>
                <div class="card-body">
                    <form asp-action="SMS" asp-controller="Home" method="post">
                        <div class="form-group">
                            <label for="name">Phone Number</label>
                            @*<input type="text" asp-for="PhoneNumber" class="form-control" pattern="^\d{1}\d{0,1}\d{0,1}\d{2}\d{0,1}\d{7}" placeholder="923xxxxxxxxx" required>*@
                            <input asp-for="PhoneNumber" class="form-control" type="number" placeholder="923xxxxxxxxx" required>
                        </div>
                        <div class="form-group">
                            <label for="message">Message</label>
                            <textarea class="form-control" asp-for="Message" rows="6" required></textarea>
                        </div>
                        <div class="mx-auto">
                            <button type="submit" class="btn btn-primary text-right">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{ 
    <script>
    if(@Html.Raw(@ViewBag.SMSStatus))
        {
            toastr.success('Passport added successfuly.');
        }
    </script>
}